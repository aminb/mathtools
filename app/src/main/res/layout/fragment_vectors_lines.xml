<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:id="@+id/rB2D"
                    android:textSize="15sp"
                    android:text="@string/twodspace"/>
                <RadioButton
                    android:checked="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rB3D"
                    android:textSize="15sp"
                    android:text="@string/threedspace"/>
            </RadioGroup>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/eq_form"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:tag="-1"
                android:id="@+id/sEqForm" />

        </TableRow>
    </TableLayout>


    <LinearLayout
        android:id="@+id/linesll1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="4" >

        <EditText
            android:id="@+id/linestextx1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestexty1"
            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/linestexty1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx2"
            />

        <EditText
            android:id="@+id/linestextz1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx2"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/linestextx2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestexty2"
            />

        <EditText
            android:id="@+id/linestexty2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx3"
            />

        <EditText
            android:id="@+id/linestextz2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx3"
            android:visibility="gone"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linesll2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:weightSum="4" >

        <EditText
            android:id="@+id/linestextx3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestexty3"
            />

        <EditText
            android:id="@+id/linestexty3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx4"
            />

        <EditText
            android:id="@+id/linestextz3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestextx4"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/linestextx4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:nextFocusDown="@+id/linestexty4"
            />

        <EditText
            android:id="@+id/linestexty4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            />

        <EditText
            android:id="@+id/linestextz4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:visibility="gone"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linesll3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:id="@+id/btnlinescalc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:enabled="false"
            android:padding="0dp"
            android:text="Analyze" />

        <Button
            android:id="@+id/btnlinesclear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:enabled="false"
            android:text="@string/clear" />
    </LinearLayout>


</LinearLayout>